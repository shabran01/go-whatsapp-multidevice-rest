# Server Configuration
SERVER_ADDRESS=127.0.0.1
SERVER_PORT=3000

# HTTP Configuration
HTTP_BASE_URL=/api/v1/whatsapp
HTTP_CORS_ORIGIN=*
HTTP_BODY_LIMIT_SIZE=8M
HTTP_GZIP_LEVEL=1
HTTP_CACHE_CAPACITY=100
HTTP_CACHE_TTL_SECONDS=5

# Authentication Configuration
AUTH_BASIC_USERNAME=admin
AUTH_BASIC_PASSWORD=secret
AUTH_JWT_SECRET=your-secret-key
AUTH_JWT_EXPIRED_HOUR=24

# WhatsApp Configuration
WHATSAPP_DATASTORE_TYPE=sqlite3
WHATSAPP_DATASTORE_URI=file:dbs/WhatsApp.db?_foreign_keys=on&_journal_mode=WAL

# WhatsApp Client Configuration
WHATSAPP_CLIENT_PROXY_URL=

# WhatsApp Version Configuration (Updated for July 2025 compatibility)
WHATSAPP_VERSION_MAJOR=2
WHATSAPP_VERSION_MINOR=2412
WHATSAPP_VERSION_PATCH=54

# WhatsApp Media Configuration
WHATSAPP_MEDIA_IMAGE_CONVERT_WEBP=false
WHATSAPP_MEDIA_IMAGE_COMPRESSION=false

# WhatsApp Connection Configuration
WHATSAPP_CONNECTION_TIMEOUT=30
WHATSAPP_RECONNECT_DELAY=5
WHATSAPP_MAX_RECONNECT_ATTEMPTS=5